{
  "name": "Heavy Vault",
  "action": {
    "default_title": "Heavy Vault"
  },
  "manifest_version": 3,
  "version": "0.0.1",
  "description": "Manage your Reddit account's Vault from the browser.",
  "permissions": [
    "scripting",
    "sidePanel",
    "storage",
    "activeTab"
  ],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.ttf",
        "*.js",
        "*.js.map",
        "*.html"
      ],
      "matches": [
        "https://www.reddit.com/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "ui.html"
  }
}
