{
  "name": "Vaultonomy",
  "action": {
    "default_title": "Vaultonomy (Reddit Vault)"
  },
  "icons": {
    "16": "img/test_icon_16.png",
    "32": "img/vaultonomy_icon_32.png",
    "48": "img/vaultonomy_icon_48.png",
    "128": "img/vaultonomy_icon_128.png"
  },
  "manifest_version": 3,
  "version": "0.0.1",
  "description": "Manage your Reddit account's Vault from the browser.",
  "permissions": ["scripting", "sidePanel", "storage", "activeTab"],
  "host_permissions": ["https://www.reddit.com/*", "https://new.reddit.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.ttf", "*.js", "*.js.map", "*.html"],
      "matches": [
        "https://www.reddit.com/*",
        "http://vaultonomy.localhost:5173/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "ui.html"
  },
  "externally_connectable": {
    "matches": ["http://vaultonomy.localhost:5173/*"]
  }
}
