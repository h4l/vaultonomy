{
  "importOrder": ["\\.mock(\\.ts)?$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "proseWrap": "always",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "experimentalTernaries": true,
  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "proseWrap": "preserve"
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always",
        "printWidth": 80
      }
    }
  ]
}
